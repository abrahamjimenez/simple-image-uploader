---
import Exit from "../assets/exit.svg"
import Dropzone from "./react/Dropzone"
---

<div class="upload-container">
    <Exit />
    <Dropzone client:load />
</div>


<style lang="scss">
  $border-color: #e3e3e3;
  $accent-primary: #3663E4;
  $accent-secondary: #303541;

  .upload-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: white;
    width: 100%;
    max-width: 600px;
    outline: 1px dashed $border-color;
    outline-offset: -8px;
    margin: auto;
    border-radius: 20px;
    min-height: 300px;

    svg {
      margin-bottom: 14px;
    }

    p {
      margin: 4px 0;
    }
  }
</style>
