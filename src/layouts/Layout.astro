<style lang="scss">
	$background-color: #F9FBFC;

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		background-color: $background-color;
		position: relative;
	}

	main {
		width: 100%;
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
	}
</style>
